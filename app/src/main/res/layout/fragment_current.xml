<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentFragment"
    >

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#529DDA"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp"

                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"

                    >

                    <TextView
                        android:id="@+id/temTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17.0°C"
                        style="@style/TextAppearance.AppCompat.Large"
                        android:textSize="40dp"
                        android:textColor="#000"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:id="@+id/dateDayLocationTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11/01/2018\nThursday\nDhaka"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    >



                    <ImageView
                        android:id="@+id/weatherIconIV"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cloud"
                        android:layout_marginLeft="20dp"

                        />
                    <TextView
                        android:id="@+id/weatherMainAndDescriptionTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scattered\nClouds"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000"

                        />

                </LinearLayout>



            </LinearLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/current_fragment_background_gradient"
                    android:padding="@dimen/last_three_layout_padding"
                    >
                    <TextView
                        android:id="@+id/minTemp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Min\n17.0°C"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textAlignment="center"
                        android:textColor="#000"

                        />
                    <TextView
                        android:id="@+id/maxTemp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Max\n17.0°C"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textAlignment="center"
                        android:textColor="#000"

                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/cloud"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/current_fragment_background_gradient"
                    android:padding="@dimen/last_three_layout_padding"
                    >


                    <TextView
                        android:id="@+id/sunriseTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunrise\n07:9:24AM"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textAlignment="center"
                        android:textColor="#000"

                        />
                    <TextView
                        android:id="@+id/sunsetTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunset\n05:45:17PM"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textAlignment="center"
                        android:textColor="#000"

                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/cloud"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/current_fragment_background_gradient"
                    android:padding="@dimen/last_three_layout_padding"
                    >


                    <TextView
                        android:id="@+id/humidityTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humidity\n86%"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textAlignment="center"
                        android:textColor="#000"

                        />
                    <TextView
                        android:id="@+id/pressureTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pressure\n1021.71hPa"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textAlignment="center"
                        android:textColor="#000"

                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/cloud"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>